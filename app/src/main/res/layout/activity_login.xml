<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:id="@+id/logoHolder"
            android:weightSum="1">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:id="@+id/imgLogo"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Student Login"
                android:id="@+id/tcLogo"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textIsSelectable="false"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:textColor="#874DAD" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textFieldParent"
            android:layout_weight="0.48"
            android:weightSum="1">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/etUsername"
                android:hint="Email" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/etPassword"
                android:hint="Password" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginButtonHolder"
            android:layout_weight="0.47">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:id="@+id/btnLogin"
                style="@style/Base.Widget.AppCompat.ActionButton"
                android:capitalize="characters"
                android:clickable="true"
                android:textSize="20dp"
                android:background="@color/switch_thumb_normal_material_dark"
                android:enabled="false"
                android:elevation="0dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:id="@+id/otherLinkHolder">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ADMIN LOGIN"
                android:id="@+id/tvSignAdmin"
                android:textColor="#874DAD"
                android:singleLine="false"
                android:layout_weight="1"
                android:contextClickable="false"
                android:clickable="true"
                android:linksClickable="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:id="@+id/tvRegister"
                android:textColor="#874DAD"
                android:singleLine="false"
                android:layout_weight="1"
                android:gravity="right"
                android:linksClickable="true"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:clickable="true" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
